set nocompatible
set tabstop=4
set softtabstop=4
set expandtab

set number
set nowrap
set showmatch
set encoding=utf-8
set laststatus=2
set ruler
set visualbell
set wildmenu
set lazyredraw
set foldenable
set foldmethod=indent
set foldnestmax=10
set foldlevelstart=10
set incsearch
set hlsearch

syntax enable
filetype indent on

nnoremap B ^
nnoremap E $
nnoremap <space> za
nnoremap <leader><space> :nohlsearch<CR>
nnoremap <up> ddkP
nnoremap <down> ddp

